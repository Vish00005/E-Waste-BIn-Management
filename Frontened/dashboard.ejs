<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - EcoBin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>

<body>
    <%- include("./navbar.ejs") %>
        <div class="container">
            <!-- Header -->

            <!-- Dashboard Hero -->
            <section class="dashboard-hero">
                <div class="hero-content">
                    <h1 class="hero-title">Your Dashboard</h1>
                    <p class="hero-subtitle">Track your recycling journey and environmental impact</p>
                </div>
            </section>

            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-header">
                        <span class="stat-label">Total Recycled</span>
                        <div class="stat-icon green">
                            <i class="fas fa-recycle"></i>
                        </div>
                    </div>
                    <div class="stat-value">
                        <%= userdata.recycledItems.length %>
                    </div>
                    <div class="stat-change positive">
                        <i class="fas fa-arrow-up"></i>
                        +<%= userdata.recycledItems.length %> this month
                    </div>
                </div>
                <% let count=0; for(i=0;i<userdata.recycledItems.length;i++) { count=count +
                    userdata.recycledItems[i].pointsEarned } %>
                    <% let price=0; for(i=0;i<userdata.recycledItems.length;i++) { price=price +
                        userdata.recycledItems[i].estimatedPrice } %>
                        <div class="stat-card">
                            <div class="stat-header">
                                <span class="stat-label">Total Value</span>
                                <div class="stat-icon blue">
                                    <i class="fas fa-wallet"></i>
                                </div>
                            </div>
                            <div class="stat-value"><%= price %></div>
                            <div class="stat-change positive">
                                <i class="fas fa-arrow-up"></i>
                                <%= price %> this month
                            </div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-header">
                                <span class="stat-label">Points Earned</span>
                                <div class="stat-icon yellow">
                                    <i class="fas fa-star"></i>
                                </div>
                            </div>
                            <div class="stat-value"><%= count %></div>
                            <div class="stat-change positive">
                                <i class="fas fa-arrow-up"></i>
                                <%= count %> this month
                            </div>
                        </div>
            </div>

            <!-- Main Content Grid -->
            <div class="content-grid">
                <!-- Left Column -->
                <div class="left-column">
                    <!-- Recycling Activity Chart -->
                    <div class="card chart-card">
                        <div class="card-header">
                            <h2 class="card-title">Recycling Activity</h2>
                            <div class="time-filter">
                                <button class="filter-btn active" data-period="6m">
                                    <i class="fas fa-calendar"></i>
                                    Last 6 months
                                </button>
                            </div>
                        </div>
                        <div class="chart-container">
                            <canvas id="activityChart"></canvas>
                        </div>
                    </div>

                    <!-- Recent Activity -->
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">Recent Activity</h2>
                            <a href="#" class="view-all">
                                View all
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </div>
                        <div class="activity-list">
                            
                            <% for (let i = 0; i < userdata.recycledItems.length; i++) { %>
                            <div class="activity-item">
                                <div class="activity-icon">
                                    <i class="fas fa-mobile-alt"></i>
                                </div>
                                <div class="activity-details">
                                    <div class="activity-name"><%= userdata.recycledItems[i].itemName %></div>
                                    <div class="activity-meta">
                                        <span class="activity-category"><%= userdata.recycledItems[i].category %></span>
                                        <span class="activity-time"><%= userdata.recycledItems[i].condition %></span>
                                    </div>
                                </div>
                                <div class="activity-reward">
                                    <div class="reward-amount">₹ <%= userdata.recycledItems[i].estimatedPrice %></div>
                                    <div class="reward-points">+<%= userdata.recycledItems[i].pointsEarned %> pts</div>
                                </div>
                            </div>
                            <% } %>
                            
                        </div>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="right-column">
                    <!-- Environmental Impact -->
                    <div class="card impact-card">
                        <h2 class="card-title">Your Impact</h2>
                        <div class="impact-list">
                            <div class="impact-item">
                                <div class="impact-icon">
                                    <i class="fas fa-leaf"></i>
                                </div>
                                <div class="impact-details">
                                    <div class="impact-value">23.5 kg</div>
                                    <div class="impact-label">CO₂ Prevented</div>
                                </div>
                            </div>

                            <div class="impact-item">
                                <div class="impact-icon">
                                    <i class="fas fa-tint"></i>
                                </div>
                                <div class="impact-details">
                                    <div class="impact-value">450 L</div>
                                    <div class="impact-label">Water Saved</div>
                                </div>
                            </div>

                            <div class="impact-item">
                                <div class="impact-icon">
                                    <i class="fas fa-tree"></i>
                                </div>
                                <div class="impact-details">
                                    <div class="impact-value">3.2</div>
                                    <div class="impact-label">Trees Equivalent</div>
                                </div>
                            </div>
                        </div>
                        <div class="impact-message">
                            <i class="fas fa-seedling"></i>
                            <p>You've made an impact equivalent to <strong>planting 3 trees</strong></p>
                        </div>
                    </div>

                   

                    <!-- Quick Actions -->
                    <div class="card quick-actions-card">
                        <h2 class="card-title">Quick Actions</h2>
                        <div class="actions-list">
                            <button class="action-btn">
                                <i class="fas fa-download"></i>
                                <span>Download Receipt</span>
                                <i class="fas fa-chevron-right"></i>
                            </button>
                            <button class="action-btn">
                                <i class="fas fa-file-export"></i>
                                <span>Export Data</span>
                                <i class="fas fa-chevron-right"></i>
                            </button>
                            <button class="action-btn">
                                <i class="fas fa-share-alt"></i>
                                <span>Share Impact</span>
                                <i class="fas fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <%- include("./footer.ejs") %>

            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script src="/JS/dashboard.js"></script>
</body>

</html>